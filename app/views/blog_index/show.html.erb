<h1>All Posts:</h1>
<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th>Author</th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.author.nickname %></td>
      </tr>
    <% end %>
  </tbody>
</table>
