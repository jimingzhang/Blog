<h1>Author's All Posts:</h1>

<table>
  <thead>
    <th>Title</th>
    <th>Published</th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <!-- <td><%= post.body %></td> -->
        <td><%= post.published %></td>
        <td><%= link_to 'Show', author_post_path(post) %></td>
        <td><%= link_to 'Edit', edit_author_post_path(post) %></td>
        <td><%= link_to 'Delete', author_post_path(post), method: :delete, data:{ confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Post', new_author_post_path %>
